{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components*": ["src/components*"],
      "@configs*": ["src/configs*"],
      "@layouts*": ["src/layouts*"],
      "@modules*": ["src/modules*"],
      "@pages*": ["src/pages*"],
      "@routes*": ["src/routes*"],
      "@themes*": ["src/themes*"]
    }
  },
  "include": ["**/*.js", "**/*.jsx", "**/*.d.ts"],
  "exclude": ["**/node_modules", "./build"]
}
